{% extends 'base.html.twig' %}

{% block title %}Last Call{% endblock %}

{% block body %}
    <nav id="menuJeu">
        <ul>
            <li id="profil" class="bangers-regular nav-item"><img src="{{ asset('img/person.png')}}"/></li>
            <li id="book" class="bangers-regular nav-item"><img src="{{ asset('img/book.png')}}"/></li>
        </ul>
    </nav>

    <div class="glitch-wrapper" id="game-title">
        <span class="glitch bangers-regular" data-glitch="Tableau de bord">Tableau de bord</span>
    </div>

    <div class="container container-home">
        <h1>Indices trouv√©s</h1>
        <div class="row">
            {% for info in informationUtilisateur %} 
                {% if info.decouverte %}
                    <div class="col-4" > 
                        <div class="card" style="width: 16rem; align-items: center; color:black; padding: 20px; margin: 20px;">
                            <h4>{{ info.titre }}</h4>
                            <p>{{ info.description }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
        <div id="div-final" class="form bangers-regular " style="display:none;">
            <form id="form-final" style="display:none;">
                <h1>Salut ! Tu as le mot de passe ? </h1>
                <div class="inputs">
                <input type="mot" class="form-control mb-2" placeholder="Mot secret" id="mot" name="mot" required>
                </div>
                <div align="center">
                    <button type="submit" id="btnFormFinal" class="btn btn-success">Communiquer le mot</button>
                </div>
            </form>
        </div>
{% endblock %}
