{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="div" id="header">
    <div class="glitch-wrapper">
        <div class="glitch bangers-regular" data-glitch="Last Call">Last Call</div>
    </div>
    <h3 class="sous-titre">Serez-vous prêt à affronter le danger ?</h3>
</div>
<div class="acceuil"></div>

  <form>
    <h1>Se connecter</h1>
    <p class="choose-email">ou utiliser mon adresse e-mail :</p>
    
    <div class="inputs">
      <input type="email" placeholder="Email" />
      <input type="password" placeholder="Mot de passe">
    </div>
    
    <p class="inscription">Je n'ai pas de <span>compte</span>. Je m'en <span>crée</span> un.</p>
    <div align="center">
      <button type="submit">Se connecter</button>
    </div>
</div>
</div>


{% endblock %}
